<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="layout.SubPage1"
             android:background="@color/c_aero">

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_check_your_healthy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="pradana.aldi.com.ta_pam_7762.CheckYourHealthy"
            android:background="@color/c_yellow_crayola">
    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:text="Kadar Gula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:id="@+id/textView4"
            android:layout_below="@+id/editText5"
            android:layout_alignStart="@+id/textView5"
            android:gravity="center_vertical|center_horizontal"/>

    <TextView
            android:text="Trombosit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:id="@+id/textView2"
            android:gravity="center_vertical|center_horizontal"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText5"
            android:background="@color/c_aeroblue"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignStart="@+id/editText4"
            android:gravity="center_vertical|center_horizontal"
            android:hint="mg/dl"/>

    <TextView
            android:text="Kadar Kolesterol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView4"
            android:gravity="center_vertical|center_horizontal"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText6"
            android:background="@color/c_aeroblue"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignStart="@+id/editText5"
            android:gravity="center_vertical|center_horizontal"
            android:hint="mg/dl"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText4"
            android:background="@color/c_aeroblue"
            android:layout_alignTop="@+id/textView2"
            android:layout_toEndOf="@+id/textView3"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical|center_horizontal"
            android:hint="permikroliter (Mel)"/>

    <TextView
            android:text="Tekanan Darah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:id="@+id/textView5"

            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/editText6"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText7"
            android:background="@color/c_aeroblue"
            android:gravity="center_vertical|center_horizontal"
            android:hint="sistolik"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignStart="@+id/editText6"
            android:layout_marginStart="7dp"/>

    <EditText
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText8"
            android:background="@color/c_aeroblue"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/editText7"
            android:layout_alignStart="@+id/editText7"
            android:hint="distolik"/>

        <ru.katso.livebutton.LiveButton
                android:id="@+id/btnCekData"
                android:gravity="center"
                android:text="Check Your Health"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="26sp"
                app:corners="4dp"
                app:normalHeight="6dp"
                app:pressedHeight="2dp"
                app:backgroundColor="@color/c_seagreen"
                app:shadowColor="@color/c_sapgreen"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/editText8"
                android:layout_alignParentStart="true"
                android:layout_marginTop="21dp"
                />
    </RelativeLayout>
</FrameLayout>
